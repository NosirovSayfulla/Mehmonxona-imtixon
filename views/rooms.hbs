<h2 class="text-2xl font-semibold text-center">Xonalar ro‘yxati</h2>
<ul class="list-disc list-inside mt-4">
    {{#each rooms}}
        <li class="text-lg">{{this.room_number}} - {{this.room_type}} - {{this.price_per_night}} so'm</li>
    {{/each}}
</ul>

<h3 class="text-xl font-semibold mt-6">Yangi xona qo‘shish</h3>
<form action="/rooms" method="POST" class="mt-4 flex flex-col max-w-md mx-auto space-y-3">
    <input type="text" name="room_number" placeholder="Xona raqami" required class="border p-2 rounded">
    <input type="text" name="room_type" placeholder="Xona turi" required class="border p-2 rounded">
    <input type="number" name="price_per_night" placeholder="Kechalik narx" required class="border p-2 rounded">
    <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Qo‘shish</button>
</form>
